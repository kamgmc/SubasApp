<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.subasta.kamgmc.subasapp.PujaActivity">

    <TextView
        android:id="@+id/maxPuja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Mayor Puja"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/maxPuja"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/minMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/monto"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/nuevaPuja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minMonto"
        android:hint="Monto a pujar"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/btnPujar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nuevaPuja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTint"
        android:text="Pujar"/>

</RelativeLayout>
